# Fichier d'exemple des variables d'environnement
# Copiez ce fichier vers .env et adaptez les valeurs

# ============================================================
# CONFIGURATION JWT
# ============================================================
# Cle secrete JWT encodee en base64
# Generation : echo -n "VotreSecretTresLongEtAleatoire" | base64
JWT_SECRET=VGhpc0lzQURldkp3dFNlY3JldEZvckxvY2FsVGVzdGluZ09ubHkxMjM0NQ==

# ============================================================
# CONFIGURATION CORS
# ============================================================
# Origines autorisees (separees par virgules, sans espaces)
CORS_ORIGINS=http://localhost:4200,http://localhost:8080,http://localhost:8091

# ============================================================
# CONFIGURATION APPLICATION
# ============================================================
# URL de base du front de l'application (utilisee dans les emails)
BASE_URL=http://localhost:4200

# Email de l'administrateur (re√ßoit les notifications)
ADMIN_EMAIL=admin@example.com

# ============================================================
# CONFIGURATION BASE DE DONNEES
# ============================================================
# URL de connexion JDBC
SPRING_DATASOURCE_URL=jdbc:mariadb://localhost:3306/myapp

# Identifiants base de donnees
SPRING_DATASOURCE_USERNAME=dbuser
SPRING_DATASOURCE_PASSWORD=dbpassword

# Mode Hibernate (update, validate, create-drop, none)
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# ============================================================
# CONFIGURATION MAIL (OBLIGATOIRE - utilise par la lib)
# ============================================================
# Serveur SMTP
SPRING_MAIL_HOST=smtp.example.com

# Port SMTP (587 pour STARTTLS, 465 pour SSL)
SPRING_MAIL_PORT=587

# Compte SMTP (utilise comme adresse expediteur)
SPRING_MAIL_USERNAME=noreply@example.com

# Mot de passe compte SMTP
SPRING_MAIL_PASSWORD=mailpassword

# Authentification SMTP (true/false)
SPRING_MAIL_AUTH=true

# STARTTLS (true/false)
SPRING_MAIL_STARTTLS=true

# ============================================================
# CONFIGURATION OPTIONNELLE
# ============================================================
# Port serveur
SERVER_PORT=8080

# Activer Swagger/OpenAPI (true/false)
SPRINGDOC_ENABLED=false

# Profils Spring actifs (dev, test, prod, secrets)
SPRING_PROFILES_ACTIVE=dev,secrets

